

table.table
  thead
    tr
      th(scope="col") #
      th(scope="col")= __('user.Name')
      th(scope="col")= __('user.Matriculation Number')
      th(scope="col")= __('user.Department')
      th(scope="col")= __('Status')
      th(scope="col") 
  tbody
    each s, i in d.projects
      tr
        th(scope="row")=i+1
        td=s.student_name
        td=s.student_matric_number
        td=s.department
        td(class=s.status==1?'text-danger':(s.status==2?'text-success':''))=__('project-status-array.'+s.status)
        td
          a(href='/project/'+s.id)= __('View')

    else 

      tr
        td(colspan="5")
          include no_data




          